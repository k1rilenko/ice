import('sprites/*')
import('helpers/svg-size')
@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/fonts'
@import 'helpers/optimize'
.title
	font-family $bor
	font-size 3.5rem
	line-height 1.14
	color $b
	text-align center
	&_white
		color $w
.sub
	font-family $bor
	font-size 2.2rem
	line-height 1.14
	color $b
.container
	padding 0 1.5rem
.button
	outline none
	background-color transparent
	border none
	&_circle
		position relative
		width 50px
		height 50px
		border-radius 50%
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		border none
		.icon_back
			position absolute
			left 50%
			top 50%
			transform translate(-68%, -50%)
	&_success
		font-size 2.2rem
		line-height 2.5rem
		font-family $bor
		color $w
		padding 21px 43px 14px
		border-radius 30px
		background linear-gradient(81.27deg, #008EF4 0%, #63D4FF 100%, #008EF4 150%)
		&:hover
			background-position right center

.hidden
	position absolute

import('../blocks/**/*')
