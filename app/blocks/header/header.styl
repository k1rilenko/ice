.header
	display block
	position fixed
	width 100%
	z-index 14
	&__wrapper
		display flex
		justify-content space-between
		align-items center
		padding 5px 0
	&__back
		width 50px
		height 50px
		border-radius 50%
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		border none
	&__login-button
		font-family $bor
		width 100px
		height 40px
		font-size 2.2rem
		line-height 45px
		color $blue
		border-radius 25px
		background-color $w
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		border none

