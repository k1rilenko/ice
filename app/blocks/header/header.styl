.header
	display block
	position fixed
	width 100%
	z-index 14
	&__wrapper
		display flex
		justify-content space-between
		align-items center
		padding 15px 0
	&__back
		position relative
		width 50px
		height 50px
		border-radius 50%
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		background-color $w
		border none
		.icon
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)

	&__login-button
		font-family $bor
		width 100px
		height 40px
		font-size 2.2rem
		line-height 45px
		color $blue
		border-radius 25px
		background-color $w
		box-shadow 0 2px 5px rgba(0, 79, 136, .2)
		border none
	&__user
		display flex
		align-items center
		&-wrapper
			width 50px
			height 50px
			border 3px solid $w
			border-radius 50%
			box-shadow: 0 2px 5px rgba(0, 79, 136, .2)
			overflow hidden
			background $w
		&-icon
			width 100%
			height 100%
			object-fit contain
		&-name
			font-weight 700
			font-size 1.6rem
			line-height 3rem
			color $b
			margin-right 1.4rem
