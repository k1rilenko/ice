.hero
	display block
	margin-bottom 5rem
	position relative
	+above($xl)
		padding-bottom 5rem
		&:before
			position absolute
			content ''
			background linear-gradient(180deg, rgba(255, 255, 255, 0) 30.56%, rgba(0, 130, 223, .65) 100%)
			opacity .2
			top 0
			left 0
			width 100%
			height 100%
			z-index -1
		&:after
			position absolute
			content ''
			background url(../images/heroes/hero_wave.svg) center no-repeat
			background-size cover
			opacity 1
			bottom -5px
			left 0
			width 100%
			height 15rem
			z-index 4
	&__container
		overflow hidden
		position relative
		+below($xl)
			&:after
				position absolute
				content ''
				border-radius 50%
				background $rifleniu
				width 89px
				height 89px
				top 20px
				right -35px
				filter blur(7px)
	&__title
		padding-top 10rem
		padding-bottom 4.4rem
		position relative
		z-index 1
	&__wrap
		position relative
		z-index 1
		+below($xl)
			&:before
			&:after
				position absolute
				content ''
				border-radius 50%
				background $rifleniu
			&:before
				width 37px
				height 37px
				top 120px
				left -10px
			&:after
				top 35px
				left 80px
				width 15px
				height 15px
	&__slider
		+above($lg)
			max-width 900px
			margin 0 auto
		+above($xl)
			max-width 1200px
		+above($xxl)
			max-width 1600px
		.swiper
			&-button
				display none
				+above($xl)
					display block
					width 6rem
					height 6rem
					border-radius 50%
					background url(../images/arrow.svg) center no-repeat
					background-size cover
					&:after
						display none
					&.swiper-button-next
						transform rotate(180deg)
			&-wrapper
				+below($xl)
					box-sizing border-box
					flex-wrap wrap
			&-slide
				display block
				width 20%
				transition .3s
				&:not(.swiper-slide-prev):not(.swiper-slide-next):not(.swiper-slide-nth-prev-2):not(.swiper-slide-nth-next-2):not(.swiper-slide-active)
					transform scale(0)
					opacity 0
				+below($xl)
					width 50%
					margin-bottom 5.5rem
					&:first-child
						width 100%
						.hero__image-wrap
							width 18rem
							height 18rem
						.hero__value
							max-width 18rem
						.hero__wrapper
							padding-top 4rem
						.hero__name
							max-width 22rem
							left 50%
							transform translateX(-50%)
				+above($xl)
					.hero__wrapper
						height 32rem
					&.swiper-slide-active
						z-index 3
						box-shadow 0 40px 10px 10px rgba(0, 0, 0, .3)
					&.swiper-slide-prev
						margin-right -5rem
						margin-left 5rem
					&.swiper-slide-next
						margin-left -5rem
						margin-right 5rem
					&.swiper-slide-nth-prev-2
						margin-right -10rem
						margin-left 10rem
					&.swiper-slide-nth-next-2
						margin-left -10rem
						margin-right 10rem
					&.swiper-slide-prev, &.swiper-slide-next
						transform translateY(3rem)
						box-shadow 0 60px 10px 10px rgba(0, 0, 0, .3)
						z-index 2
						&:before, &:after
							top 5rem
					&.swiper-slide-nth-prev-2, &.swiper-slide-nth-next-2
						transform translateY(8rem)
						z-index 1
					&.swiper-slide-nth-prev-2
						&:after
							top 8rem
					&.swiper-slide-nth-next-2
						&:before
							top 8rem
				+above($xxl)
					.hero__wrapper
						height 38rem
						width 100%
	&__container
		padding 0 1.5rem
	&__item
		display block
		+below($xl)
			&_capitan
				.hero__image-wrap
					background $capitan
			&_hrust
				.hero__image-wrap
					background $hrust
			&_eskimon
				.hero__image-wrap
					background $eskimon
			&_kaktus
				.hero__image-wrap
					background $kaktus
			&_lakomka
				.hero__image-wrap
					background $lakomka
			&_plombirovna
				.hero__image-wrap
					background $plombirovna
			&_raduga
				.hero__image-wrap
					background $raduga
				.hero__value
					max-height 16rem
			&_rifleniu
				.hero__image-wrap
					background $rifleniu
			&_rojoker
				.hero__image-wrap
					background $rojoker
		+above($xl)
			padding 40px 20px
			border-radius 20px
			&_capitan
				background $capitan
			&_hrust
					background $hrust
			&_eskimon
					background $eskimon
			&_kaktus
					background $kaktus
			&_lakomka
					background $lakomka
			&_plombirovna
					background $plombirovna
			&_raduga
					background $raduga
				.hero__value
					max-height 16rem
			&_rifleniu
					background $rifleniu
			&_rojoker
					background $rojoker
			.hero__value
				+above($xl)
					max-width 100%
					max-height 100%
	&__image-wrap
		width 13rem
		height 13rem
		border-radius 50%
		position relative
		margin 0 auto
		+above($xl)
			width 100%
			height 100%
	&__image-block
		width 100%
		height 100%
		overflow hidden
	&__value
		position absolute
		max-width 13rem
		bottom 0
		left 50%
		transform translateX(-50%)
	&__name
		position absolute
		max-width 140px
		z-index 2
		bottom 0
		+below($sm)
			bottom -1.5rem
		+above($xl)
			max-width 70%
			top 0
			left 50%
			transform translateX(-50%)
	&__image-wrap_capitan
		.hero__name
			+below($sm)
				bottom -3.5rem
			+above($lg)
				top -3rem
