.hero-list
	display block
	+below($lg)
		display none
	&__wrapper
		display flex
		align-items center
		padding 13rem 10% 14rem
	&__wrap
		position relative
		width 130px
		height 130px
		border-radius 50%
		margin-right 4rem
	&__image
		position absolute
		max-width 130px
		max-height 150px
		bottom 0
		left 50%
		transform translateX(-50%)

