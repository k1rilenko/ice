mixin video()
	+b.video&attributes(attributes)
		+e('video').block(autoplay, playsinline="playsinline" muted='muted', loop)
			source(src='./assets/videos/promo-unicum-original.webm' type='video/webm')
			source(src='./assets/videos/promo-unicum-original.mp4' type='video/mp4')
			source(src='./assets/videos/promo-unicum-original.ogv' type='video/ogg')
		+e.overlay
