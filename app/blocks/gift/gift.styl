.gift
	display block
	position relative
	&__background
		position absolute
		top 20px
		width 100%
		svg
			width 100%
			height 300px
	&__title
		position relative
		z-index 3
		margin-bottom 1rem
	&__subtitle
		padding 0 1.5rem
		text-align center
		position relative
		z-index 3
		font-size 2rem
		line-height 1.5
		margin-bottom 4rem
	&__slider
		background linear-gradient(342.98deg, #63D4FF -13.23%, #008EF4 87.33%)
		padding-bottom 3rem
		.swiper
			&-slide
				height 455px
			&-pagination
				position relative
				padding-top 3.7rem
				&-bullet
					margin 0 5px
					width 10px
					height 10px
					background-color $w
					opacity 1
					&-active
						box-shadow 0 0 0 2.5px $w
					&:first-child
						&.swiper-pagination-bullet-active
							background $kaktus
					&:nth-child(2)
						&.swiper-pagination-bullet-active
							background $plombirovna
					&:nth-child(3)
						&.swiper-pagination-bullet-active
							background $raduga
					&:nth-child(4)
						&.swiper-pagination-bullet-active
							background linear-gradient(204.03deg, #8A3918 0, #622C18 99.52%)
					&:nth-child(5)
						&.swiper-pagination-bullet-active
							background $plombirovna
					&:nth-child(6)
						&.swiper-pagination-bullet-active
							background $kaktus
					&:nth-child(7)
						&.swiper-pagination-bullet-active
							background $capitan
		.slider__container
			background-color $w
			border-radius 16px
			height 100%
			padding-top 5rem
		.slider__wrapper
			display flex
			height 100%
			flex-direction column
		.slider__value
			width 200px
			position absolute
			bottom 0
		.slider__image-wrap
			margin-top 5rem
			width 200px
			height 200px
			position relative
			margin 0 auto
			margin-bottom 4rem
		.slider__text-block
			padding 0 2rem
			text-align center
		.slider__sub
			margin-bottom 2rem
