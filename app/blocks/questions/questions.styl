.questions
	display block
	padding-top 1.2rem
	border 2px solid $grey
	&__list
		position relative
		counter-reset questions
	&__item
		padding 1.8rem 0 2.4rem
		border-bottom 2px solid $grey
		&_count
			&:before
				position absolute
				left 0
				counter-increment questions
				content counter(questions)
				font-size 1.4rem
				line-height 1.43
				transition .3s
				font-weight 700
		&_common
			&:before
				position absolute
				content ''
				width 13px
				height 15px
				background-image url(../images/icon-list.svg)
		&_open
			.questions__title
				color $blue
				.icon_link
					transform rotate(270deg)
			.questions__text
				display block

			&:before
				color $blue
	&__title
		cursor pointer
		position relative
		display flex
		align-items flex-start
		justify-content space-between
		font-size 2rem
		line-height 1.5
		padding-top 4.5rem
		&:hover
			color $blue
		.icon_link
			flex 0 0 17px
			margin-top .7rem
			transform rotate(90deg)
	&__text
		font-size 2rem
		line-height 1.75
		padding 0 18rem
		overflow hidden
		transition .4s
		padding-top 5.2rem
		display none
		+below($sm)
			padding 0 4rem
			padding-top 3.6rem
			font-size 1.8rem
			line-height 1.67

