.popup
	display block
	background $gradient
	padding 2rem 0
	min-height 100vh
	&__wrapper
		position relative
		background-color $w
		border-radius 20px
		padding 5.3rem 2rem 3.4rem
		margin 0 1.5rem
		border 1px solid #EBF2F7
		box-shadow: 0 1px 1px rgba(0, 56, 166, .08), 0 2px 2px rgba(0, 56, 166, .08), 0 4px 4px rgba(0, 56, 166, .08), 0 8px 8px rgba(0, 56, 166, .08), 0 16px 16px rgba(0, 56, 166, .08)
	&__button
		padding 10px
		position absolute
		right 16px
		top 16px
	&_forgot
		.popup__wrapper
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			margin 0
		&:before
			position absolute
			content ''
			width 12.2rem
			height 15.2rem
			background-image url(../images/icecream-blue-bg.png)
			background-repeat no-repeat
			right 0
			top 15%
		&:after
			position absolute
			content ''
			width 18rem
			height 15rem
			background-image url(../images/icecream-red-bg.png)
			background-repeat no-repeat
			background-position center
			left 0
			bottom 0
.tabs
	&__content
		display none
		&.active
			display block
	&__caption
		display flex
		border-bottom 2px solid $grey
		margin-bottom 5rem
	&__item
		position relative
		font-size 2rem
		line-height 1.5
		font-weight 500
		padding-bottom .7rem
		text-align center
		flex-grow 1
		&:first-child
			width calc(100% / 3)
		&.active
			color $blue
			&::after
				position absolute
				content ''
				width 100%
				height 2px
				background-color $blue
				left 0
				bottom -1px
	&__apps
		display flex
		padding 0 1rem
		justify-content space-between
		padding-bottom 5rem
		border-bottom 2px solid $grey
		&-link
			display flex
			justify-content center
			align-items center
			width 5rem
			height 5rem
			border-radius 50%
			&_vk
				background linear-gradient(225deg, #52AAE7 0, #398DC6 100%)
				box-shadow 0 5px 10px rgba(78, 151, 201, .2)
			&_fb
				background linear-gradient(225deg, #0078CC 0, #005A99 100%)
				box-shadow 0 5px 10px rgba(0, 90, 153, .2)
			&_google
				background $w
				box-shadow 0 5px 10px rgba(163, 163, 163, .4)
			&_ya
				background red
				box-shadow 0 5px 10px rgba(255, 0, 0, .2)

